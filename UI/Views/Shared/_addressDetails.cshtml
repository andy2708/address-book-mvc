@model List<AddressBook.AddressInfo.Address>

@if (@Model.Count == 0)
{
    <div>No addresses currently in address book. Please click Add above to add one</div>
}
       @Html.Hidden("hiddenSort", (string)ViewBag.sort, new { id = "hiddenSort" })
      @Html.Hidden("hiddenDirection", (string)ViewBag.direction, new { id = "hiddenDirection" })
<table>
    <tr>
        <th></th>
        <th><a href="javascript:void(0)" onclick="sortList('LastName')">Last Name</a></th>
        <th><a href="javascript:void(0)" onclick="sortList('FirstName')">First Name</a></th>
        <th>Phone Type</a></th>
        <th>Phone Number</a></th>
    </tr>
@foreach (AddressBook.AddressInfo.Address address in @Model)
{
    <tr>
        <td>@Html.HiddenFor(modelItem=> address.uniqueId)</td>
        <td>@Html.DisplayFor(modelItem=> address.lastName)</td>
        <td>@Html.DisplayFor(modelItem => address.firstName)</td>
        <td>@Html.DisplayFor(modelItem => address.phoneType)</td>
        <td>@Html.DisplayFor(modelItem => address.phoneNumber)</td>
        <td><a href="javascript:void(0)" onclick="getDetailsForEditingEntry(@address.uniqueId,'edit')">Edit</a> | </td>
        <td><a href="javascript:void(0)" onclick="getDetailsForEditingEntry(@address.uniqueId,'delete')">Delete</a></td>
    </tr>
}

</table>
